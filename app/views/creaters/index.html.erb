
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New File", new_creater_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @creater.each do |c| %>
         
         <tr>
            <td><%= c.name %></td>
            <td><%= link_to "Download File", c.attachment_url %></td>
            <td><%= button_to "Delete File",c, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{c.name}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>